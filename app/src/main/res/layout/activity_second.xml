<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/selectGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="286dp"
        android:text="Select a genre."
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="36dp"
        android:text="@string/buttonBack"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        android:text="@string/buttonFind"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBack" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="268dp"
        android:layout_height="395dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="149dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectGenre"
        android:checkedButton="@+id/romance">

        <RadioButton
            android:id="@+id/romance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/poetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poetry"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/fiction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fiction"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/thriller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thriller"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/drama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/fantasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/crime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crime"
            android:textColor="@color/brown" />

    </RadioGroup>

    <TextView
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="334dp"
        android:text="Sort by:"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/RadioGroup2"
        android:layout_width="186dp"
        android:layout_height="99dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="203dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort"
        android:checkedButton="@+id/relevance">

        <RadioButton
            android:id="@+id/relevance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relevance"
            android:textColor="@color/brown" />

        <RadioButton
            android:id="@+id/newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newest"
            android:textColor="@color/brown" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>